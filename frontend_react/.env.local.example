# Frontend-only mode example .env.local
# Leave API endpoints unset to run fully offline using localStorage.

# Feature flags: comma-separated. Charts default to enabled if omitted.
REACT_APP_FEATURE_FLAGS=charts

# Enable experimental UI by setting to "true"
REACT_APP_EXPERIMENTS_ENABLED=false

# Optional health path (used locally too). Default: /health
# REACT_APP_HEALTHCHECK_PATH=/health

# Optional/unused in frontend-only mode (leave unset):
# REACT_APP_API_BASE=
# REACT_APP_BACKEND_URL=
